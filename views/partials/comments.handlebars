<div class="comments">
  {{!-- {{#each post.comments as |comment|}} could have worked to declare variable name for iterated objects --}}
  {{#each this}}
    <section class="comment">
      <div class="meta">
        {{user.username}}
        on
        {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
  {{/each}}
</div>